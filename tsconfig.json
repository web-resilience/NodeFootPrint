{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "noEmit":true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["core/**/*", "test/**/*","packages/**/*"],
}
